<%= form_for @article do |f| %>
  <div class="placeholder">
    <%= f.label :title %> <span class="mandatory">*</span>
    <%= f.text_field :title, autofocus: true, required: true, class: :input %>
    <%= errors_for @article, :title %>
  </div>

  <div class="placeholder">
    <%= f.label :body %>
    <%= f.text_area :body, class: :input %>
  </div>

  <div class="saver">
    <%= f.submit name: nil, class: 'button green right' %>
  </div>
<% end %>

<script>
  $(function() {
    $('#article_body').taby();
  });
</script>
