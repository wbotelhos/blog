<%= form_for @media do |f| %>
  <div class="placeholder">
    <%= f.label :title %> <span class="mandatory">*</span>
    <%= f.text_field :title, autofocus: true, required: true, class: :input %>
    <%= errors_for @media, :title %>
  </div>

  <div class="placeholder">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'input input--textarea input--code' %>
  </div>

  <div class="saver">
    <%= f.submit name: nil, class: 'button green' %>

    <%= link_to t('article.preview'), slug_path(@media.slug), target: :_blank, class: 'button green-dark' if @media.persisted? %>
  </div>
<% end %>

<%= button_to t('article.publish'), publish_article_path(@media), method: :patch, class: 'button blue' if @media.persisted? && !@media.published? %>

<script>
  $(function() {
    $('.input--code').taby();
  });
</script>
