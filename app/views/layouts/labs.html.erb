<!DOCTYPE html>

<html dir="ltr" lang="<%= I18n.locale %>">
<head>
  <%= stylesheet_link_tag    'labs' %>
  <%= javascript_include_tag 'labs' %>
</head>
<body>
  <div class="content">
    <div role="banner" class="header">
      <h1><%= link_to @media.title, slug_path(@media.slug), class: :logo %></h1>

      <div class="description"><%= @media.description %></div>
    </div>

    <nav role="navigation" class="navigation">
      <%= link_to content_tag(:i, nil, class: 'i-arrow-down') + " v#{@media.version}", "#{CONFIG['github']}/#{@media.slug}/archive/#{@media.version}.zip", class: :download %>
      <%= link_to content_tag(:i, nil, class: 'i-github'), "#{CONFIG['github']}/#{@media.slug}", target: :blank %>
      <%= link_to content_tag(:i, nil, class: 'i-labs'), "#{CONFIG['url_http']}/labs", target: :blank, class: :labs %>

      <%= render 'shared/donation' %>
    </nav>

    <%= yield %>
  </div>
</body>
</html>
